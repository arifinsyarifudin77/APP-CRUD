{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "/server.js"
    }
  ],
  "env": {
    "MONGODB_URI": "mongodb://localhost:27017/tododb",
    "NODE_ENV": "production"
  },
  "functions": {
    "api/*": {
      "runtime": "@vercel/node"
    }
  }
}
